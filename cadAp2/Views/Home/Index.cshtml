@model ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Inicio";
}

<article class="text-center">
    <h1 class="display-4">Sei-Ya Cadetería</h1>
    @* <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p> *@

</article>
<h4> Inicie Sesión </h4>
<hr />
<article class="row">
    <div class="col-md-4">
        <form asp-controller="Cadete" asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <fieldset class="form-group row">
                <div class="form-group">
                    <label asp-for="NikName" class="control-label"></label>
                    <input asp-for="NikName" class="form-control">
                    <span asp-validation-for="NikName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    @* <input asp-for="Password" class="form-control"> *@
                    <input type="password" asp-for="Password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Entrar" class="btn btn-info" />
                </div>
                @* <input asp-for="Id" value="0" type="hidden"/> *@
            </fieldset>
        </form>
    </div>
</article>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}