@model ViewModels.BorrarClienteViewModel
@{
    ViewData["Title"] = "Borrar Cliente";
}

<h2> @ViewData["Title"] Nro. @Model.Id</h2>

<p>¿Está seguro que quiere eliminar a <strong>@Model.Nombre</strong>?</p>
<form asp-action="Borrar" class="form-row align-items-center">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Confirmar" class="btn btn-danger" />  
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>