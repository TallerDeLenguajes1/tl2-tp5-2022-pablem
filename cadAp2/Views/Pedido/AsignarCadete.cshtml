@model ViewModels.AsignarCadeteViewModel

@{
    ViewData["Title"] = "Editar Pedido";
    string? idPedido = ViewData["idPed"]?.ToString();
}

<h1> Asignar o Cambiar de Cadete </h1>
<hr />
<h4> Pedido nro. @idPedido</h4>

<form asp-controller="Cadete" asp-action="GuardarPedido" method="get" class="form-row align-items-center">
    <select name="idCad" asp-items="Model.Lista">
        <option value="">  </option>
    </select>
    <input type="hidden" name="idPed" value="@idPedido" />
    <input type="submit" value="Confirmar" class="btn btn-primary" />  
    <a asp-action="Index" class="btn btn-secondary"> Cancelar </a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
