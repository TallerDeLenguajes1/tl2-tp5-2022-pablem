@model ViewModels.AltaPedidoViewModel

@{
    ViewData["Title"] = "Crear Pedio";
}

<h1> @ViewData["Title"] </h1>
<hr />
<article class="row">
    <div class="col-md-4">
        <form asp-action="GuardarPedido">
        <fieldset class="form-group row">
            <legend> Pedido nro. @ViewData["idPed"] </legend>
            <div class="form-group">
                <label asp-for="Detalles" class="control-label"></label>
                <input asp-for="Detalles" class="form-control" />
                <span asp-validation-for="Detalles" class="text-danger"></span>
            </div>
            <select name="IdCliente" asp-items="Model.ListaClientes">
                <option value=""> Historial de Clientes </option>
            </select>
            <div class="form-group">
                <input type="submit" value="Guardar Pedido" class="btn btn-primary" />
            </div>
        </fieldset>
    </form>
</article>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Cadete" asp-action="GuardarCliente">
        <fieldset class="form-group row">
            <legend> Nuevo Cliente </legend>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReferenciaDireccion" class="control-label"></label>
                <input asp-for="ReferenciaDireccion" class="form-control" />
                @* <span asp-validation-for="ReferenciaDireccion" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear Cliente" class="btn btn-primary" />
            </div>
        </fieldset>
    </form>
</article>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}