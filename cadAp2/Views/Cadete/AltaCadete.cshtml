@model cadAp2.Models.Cadete

@{
    ViewData["Title"] = "Registrar un nuevo Cadete";
}

<h1> @ViewData["Title"] </h1>

<article class="contenedor-form-cadete">
    <form asp-controller="Cadete" asp-action="GuardarCadete" method="post">
        <fieldset class="form-group row">

            <legend>Cadete nro. @ViewData["idCad"] </legend>
            <div class="form-group">
                <label for="nom">Nombre: </label>
                    <input asp-for="Nombre" class="form-control" type="text" id="nom" maxlength="50" placeholder="Ingrese el nombre..." required>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label for="dire">Dirección: </label>
                <input asp-for="Direccion" class="form-control" type="text" id="dire" maxlength="50" placeholder="Ingrese la dirección..." required>
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label for="tel">Teléfono: </label>
                <input asp-for="Telefono" class="form-control" type="text" id="tel" maxlength="50" placeholder="Ingrese el teléfono..." required>
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-info" />
            </div>
            @* <input asp-for="Id" value="0" type="hidden"/> *@
        </fieldset>
    </form>
</article>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>