@model IEnumerable<ViewModels.MostrarCadeteViewModel>

@{
    ViewData["Title"] = "Lista de Cadetes";
}

<h1> @ViewData["Title"] </h1>

<p>
    <a asp-action="AltaCadete">Nuevo Cadete</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NroPendientes)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var cad in Model) {
        <tr>
            <td>
                @cad.Id
            </td>
            <td>
                @cad.Nombre
            </td>
            <td>
                @cad.Telefono
            </td>
            <td>
                @cad.Direccion
            </td>
            <td>
                @cad.NroPendientes
            </td>
            <td>
                <a asp-action="AsignarPedido" asp-route-id="@cad.Id"> Asignar Pedido </a>
            </td>
            <td>
                <a asp-action="PedidosCadete" asp-route-id="@cad.Id"> Pedidos </a> |
                <a asp-action="Editar" asp-route-id="@cad.Id"> Editar </a> |
                <a asp-action="ConfirmacionBorrar" asp-route-id="@cad.Id"> Borrar </a>
            </td>
        </tr>
}
    </tbody>
</table>